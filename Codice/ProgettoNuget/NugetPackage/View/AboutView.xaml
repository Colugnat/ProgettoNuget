<UserControl x:Class="NugetPackage.View.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NugetPackage.View"
             DataContext="{Binding Source={StaticResource Locator}, Path=About}"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="1">
            <TextBox IsEnabled="False" Text="{Binding Path=LegalCopyright, Mode=OneWay}"></TextBox>
            <TextBox IsEnabled="False" Text="{Binding Path=ProductVersion, Mode=OneWay}"></TextBox>
        </StackPanel>
    </Grid>
</UserControl>
